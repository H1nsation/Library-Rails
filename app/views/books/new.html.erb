<h1>New Book</h1>
<%= form_for @book do |f| %>
	<ul>
		<% @book.errors.full_messages.each do |error| %>
			<li> <%= error %> </li>
		<% end %>
	</ul>
	<p>
		<%= f.label :title %> <br/>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :author %> <br/>
		<%= f.text_field :author %>
	</p>
	<p>
		<%= f.label :description %> <br/>
		<%= f.text_field :description %>
	</p>
	<p>
		<%= f.label :quantity %> <br/>
		<%= f.number_field :quantity, min: 1 %>
	</p>
	<%= f.submit %>
<% end %>